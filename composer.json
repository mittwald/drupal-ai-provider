{
  "name": "mittwald/drupal-ai-provider",
  "description": "mittwald provider implementation for the AI module for Drupal",
  "type": "drupal-module",
  "license": "GPL-2.0-or-later",
  "require": {
    "drupal/ai": "^1.2.0",
    "drupal/key": "^1.18"
  },
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": false,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpro/grumphp": true
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "drupal/coder": "^8.3",
    "phpro/grumphp": "^2.17"
  },
  "scripts": {
    "analyse": "phpstan analyse --memory-limit=512M"
  }
}
